{
  "AllowedHosts": "*",
  "ConnectionStrings": {
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "ServerConfiguration": {

    /* If set to true, the application will stop forcing the use of https. 
           However this is not recommended if the application is hosted in a public domain */
    "DisableSSLRequirement": true,

    /* The folder where the vault files will be stored */
    "VaultsFolder": "Vaults",

    /* The application UI language */
    "Language": "en",

    /* Uncomment the following line to enable automatic vault backups to a secondary location */
    //"BackupFolder": "D:\\Erebus Vaults",

    /* The session idle expiration in minutes. Strongly recommended to keep this number low */
    "SessionTimeoutMinutes": 5
  }
}
